<% provide :title do %><%= @investment.title %>
<% end %>
<% content_for :canonical do %>
  <%= render "shared/canonical", href: budget_investment_url %>
<% end %>

<div class="custom-phases-nav frellink">
  <div class="main-indented-content">
    <ul class="tabs" id="custom_phases_tabs"
        data-deep-link="true"
        data-update-history="true"
        data-deep-link-smudge="true"
        data-deep-link-smudge-delay="500"
        data-turbolinks="false"
        data-tabs>
      <% @custom_phases.each do |_, phase| %>
        <% if phase.enabled %>
          <li class="tabs-title <%= 'is-active active-phase' if phase.url %>">
            <%= link_to budget_investments_url(@budget) + "#tab-#{phase.kind}", "data-turbolinks" => false do %>
              <h3><i></i><%= t("custom.headings.#{phase.kind}") %></h3>
              <span><%= l phase.starts_at.to_date, format: :shortish %>&nbsp;&dash;&nbsp;<%= l phase.ends_at.to_date, format: :shortish %></span>
            <% end %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>

<%= render partial: '/budgets/investments/investment_show', locals: {
  investment: @investment,
  investment_ids: @investment_ids,
  investment_votes: @investment_votes,
  ballot: @ballot
} %>


<section>
  <div class="row">
    <div class="small-12 medium-7 medium-centered">
      <div class="small-12 medium-9 medium-centered" data-tabs-content="investments_tabs">
        <%= render "budgets/investments/filter_subnav" %>

        <div class="tabs-panel is-active" id="tab-comments">
          <%= render partial: '/comments/comment_tree', locals: {comment_tree: @comment_tree,
                                                                 comment_flags: @comment_flags,
                                                                 display_comments_count: false} %>
        </div>

        <%= render "milestones/milestones", milestoneable: @investment %>
      </div>
    </div>
  </div>
</section>
