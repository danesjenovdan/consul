<select name="" onchange="if (this.value) location = this.value;">
  <option value="<%= budget_investments_url(@budget, request.query_parameters.except(:search)) %>"><%= t("shared.tags_cloud.categories") %></option>
  <% @categories.each do |category| %>
    <%= selected = ' selected' if params[:search] == category.name %>
    <option value="<%= budget_investments_url(@budget, request.query_parameters.merge({search: category.name})) %>" <%= selected %>><%= category.name %></option>
  <% end %>
</select>
