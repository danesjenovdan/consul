<% provide :title do %><%= t('budgets.investments.index.title') %>
<% end %>

<% content_for :canonical do %>
  <% if @heading.present? %>
    <%= render "shared/canonical",
               href: budget_investments_url(@budget,
                                            heading_id: @heading.id,
                                            filter: @current_filter) %>
  <% else %>
    <%= render "shared/canonical", href: budget_investments_url(@budget) %>
  <% end %>
<% end %>

<main id="budget-investments-main" data-tabs-content="custom_phases_tabs">

  <div class="custom-phases-nav">
    <div class="main-indented-content">
      <ul class="tabs" id="custom_phases_tabs"
          data-deep-link="true"
          data-update-history="true"
          data-deep-link-smudge="true"
          data-deep-link-smudge-delay="500"
          data-tabs>
        <% @custom_phases.each do |_, phase| %>
          <% if phase.enabled %>
            <li class="tabs-title <%= 'is-active active-phase' if phase.url %>">
              <%= link_to "#tab-#{phase.kind}" do %>
                <h3><i></i><%= t("custom.headings.#{phase.kind}") %></h3>
                <span><%= l phase.starts_at.to_date, format: :shortish %>&nbsp;&dash;&nbsp;<%= l phase.ends_at.to_date, format: :shortish %></span>
              <% end %>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>


  <% @custom_phases.each do |_, phase| %>
    <% if phase.enabled %>

      <div class="tabs-panel <%= 'is-active' if phase.url %>" id="tab-<%= phase.kind %>">
        <% if phase.url %>
          <div class="main-indented-content">
            <%= render '/budgets/investments/header' %>

            <% if @investments.count > 0 || @heading.present? %>

              <div class="row budget-investments">
                <h2 class="phase-title"><%= t('custom.titles.added_proposals') %></h2>

                <% if @investments.count > 0 %>
                  <%= render('shared/order_links', i18n_namespace: "budgets.investments.index") unless @current_filter == "unfeasible" %>
                <% end %>

                <div>
                  <%= render 'budgets/investments/categories' %>
                  <% if @budget.headings.count > 1 %>
                    <%= render 'budgets/investments/districts' %>
                  <% end %>
                </div>

                <div class="row small-up-1 medium-up-1 large-up-3">
                  <% @investments.each_with_index do |investment, index| %>
                    <% investment_class = 'column column-block budget-investment-holder' %>
                    <% investment_class = investment_class + ' last-in-row' if (index != 0 && (index + 1) % 4 == 0) %>
                    <div class="<%= investment_class %>">
                      <%= render partial: '/budgets/investments/investment',
                                 locals: {
                                   investment: investment,
                                   investment_ids: @investment_ids,
                                   investment_votes: @investment_votes,
                                   ballot: @ballot
                                 } %>
                    </div>
                  <% end %>
                </div>

              </div>

            <% end %>

            <div class="row">
              <%= paginate @investments %>
            </div>
          </div>
        <% else %>
          <%
            phaza = (phase.kind).to_s
          %>

          <% if phaza == "balloting" %>

            <div class="landings">
              <div class=" bggray">
                <div class="main-indented-content">
                  <div class="row">
                    <div class="small-12 medium-9 medium-centered text-center">
                      <h2>Glasuj!</h2>
                      <p>
                        Med 27. 2. in 6. 3. boš lahko neposredno soodločal/-a o porabi 60&nbsp;000&nbsp;€ proračunskih
                        sredstev
                        občine Hrpelje-Kozina.
                      </p>
                    </div>
                  </div>
                </div>
              </div>

              <div class="">
                <div class="main-indented-content ">
                  <div class="row qs">
                    <div class="small-12 medium-6 column ">
                      <div class="medium-8 medium-centered js-padt">
                        <h2>Kaj?</h2>
                        <p>
                          Med vsemi oddanimi predlogi izbereš tiste, za katere si najbolj želiš, da bi bili uresničeni.
                        </p>
                      </div>
                    </div>
                    <div class="small-12 medium-6 column">
                      <div class="medium-centered">
                        <%= image_tag(image_path_for('phases/kaj.png')) %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class=" bggray">
                <div class="main-indented-content ">
                  <div class="row qs">
                    <div class="small-12 medium-6 column hide-for-small-only">
                      <div class=" medium-centered">
                        <%= image_tag(image_path_for('phases/kdo.png')) %>
                      </div>
                    </div>
                    <div class="small-12 medium-6 column ">
                      <div class="medium-8 medium-centered js-padt">
                        <h2>Kdo?</h2>
                        <p>
                          Glasoval bo lahko vsakdo s stalnim prebivališčem v občini Hrpelje-Kozina, star vsaj 14 let.
                        </p>
                      </div>
                    </div>
                    <div class="small-12 medium-6 column show-for-small-only">
                      <div class=" medium-centered">
                        <%= image_tag(image_path_for('phases/kdo.png')) %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="">
                <div class="main-indented-content ">
                  <div class="row qs">
                    <div class="small-12 medium-6 column ">
                      <div class="medium-8 medium-centered js-padt">
                        <h2>Kako?</h2>
                        <p>
                          Poleg spletnega bo glasovanje možno tudi na papirju, in sicer med 27. 2. in 6. 3. v prostorih
                          občine na Reški cesti 14 v Kozini.
                        </p>
                      </div>
                    </div>
                    <div class="small-12 medium-6 column ">
                      <div class="medium-centered">
                        <%= image_tag(image_path_for('phases/kako.png')) %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

          <% end %>


          <% if phaza == "finished" %>
            <div class="landings">
              <div class=" bggray">
                <div class="main-indented-content">
                  <div class="row">
                    <div class="small-12 medium-9 medium-centered text-center">
                      <h2>Spremljaj izvedbo!</h2>
                      <p>
                        Ko bo glasovanje o projektih zaključeno, bodo izbrani predlogi prešli v fazo implementacije.
                      </p>
                    </div>
                  </div>
                </div>
              </div>

              <div class="">
                <div class="main-indented-content ">
                  <div class="row qs">
                    <div class="small-12 medium-6 column ">
                      <div class="medium-8 medium-centered js-padt">
                        <h2>Kaj potem?</h2>
                        <p>
                          Za izvajanje izglasovanih projektov je odgovorna občina. Implementacija mora biti dokončana v
                          trenutnem proračunskem obdobju.
                        </p>
                      </div>
                    </div>
                    <div class="small-12 medium-6 column ">
                      <div class="medium-centered">
                        <%= image_tag(image_path_for('phases/kajpazdaj.png')) %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class=" bggray">
                <div class="main-indented-content ">
                  <div class="row qs">
                    <div class="small-12 medium-6 column hide-for-small-only">
                      <div class=" medium-centered">
                        <%= image_tag(image_path_for('phases/participacija.png')) %>
                      </div>
                    </div>
                    <div class="small-12 medium-6 column ">
                      <div class="medium-8 medium-centered js-padt">
                        <h2>In moja vloga?</h2>
                        <p>
                          V tej fazi boš lahko bdel/-a nad izvajanjem projektov, spremljal/-a posodabljanje njihovih
                          časovnic in se veselil/-a napredka.
                        </p>
                      </div>
                    </div>
                    <div class="small-12 show-for-small-only">
                      <div class="medium-centered">
                        <%= image_tag(image_path_for('phases/participacija.png')) %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="">
                <div class="main-indented-content ">
                  <div class="row qs">
                    <div class="small-12 medium-6 column ">
                      <div class="medium-8 medium-centered js-padt">
                        <h2>In nato?</h2>
                        <p>
                          Izvedeni projekti bodo dokumentirani z vizualnimi materiali ter opremljeni z opisom in
                          slikami.
                          Medtem pa že lahko razmišljaš o svojem predlogu za naslednje proračunsko leto ...
                        </p>
                      </div>
                    </div>
                    <div class="small-12 medium-6 column">
                      <div class="medium-centered">
                        <%= image_tag(image_path_for('phases/potem.png')) %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>


        <% end %>
      </div>
    <% end %>
  <% end %>
  </div>
</main>
